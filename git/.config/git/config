[color]
  ui = auto

[push]
  autoSetupRemote = true

[pull]
  rebase = false

[core]
  editor = nvim
  pager = delta
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[diff]
  tool = codediff

[difftool "codediff"]
  cmd = nvim -f -c "CodeDiff file \"$LOCAL\" \"$REMOTE\""

[difftool]
  prompt = false

[merge]
  tool = codediff

[mergetool "codediff"]
  cmd = nvim -f -c "CodeDiff merge" "$MERGED"

[mergetool]
  keepBackup = false
  prompt = false

[status]
  short = true
  branch = true
