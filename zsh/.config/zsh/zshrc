# alias nf="nvim $(fzf --preview='cat {}')"
nf() {
  local file
  file=$(fzf --preview='bat {}') && [ -n "$file" ] && nvim "$file"
}

cdd() {
  local dir
  dir=$(fd -t d | fzf --prompt="Directory: " --height=50% --border)
  [[ -n $dir ]] && cd "$dir"
}




